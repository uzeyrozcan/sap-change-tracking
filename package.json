{
  "name": "Fiorielements",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/change-tracking": "^1.1.3",
    "@cap-js/hana": "^2",
    "@openai/agents": "^0.2.1",
    "@openai/agents-core": "^0.2.1",
    "@openai/agents-openai": "^0.2.1",
    "@sap/cds": "^9.4.4",
    "@sap/cds-mtxs": "^3",
    "@sap/xssec": "^4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "node-fetch": "^2.7.0",
    "openai": "^6.10.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0",
    "json-server": "^1.0.0-beta.3",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "mock-api": "json-server --watch mock/activities.json mock/companies.json --port 4005",
    "watch-project": "cds watch --open project/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-changelog": "cds watch --open changelog/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-chat": "cds watch --open chat/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-ui5chatapp": "cds watch --open ui5chatapp/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-products": "cds watch --open products/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy Fiorielements --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "build:cf": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "watch-aiassistant": "cds watch --open aiassistant/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-aiassistant2": "cds watch --open aiassistant2/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-worklist": "cds watch --open worklist/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-project1": "cds watch --open project1/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "private": true,
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "[production]": {
          "kind": "hana"
        },
        "credentials": {
          "url": "db.sqlite"
        }
      },
      "[production]": {
        "auth": "xsuaa",
        "multitenancy": true
      },
      "html5-repo": true,
      "portal": true,
      "app-front": true,
      "[with-mtx]": {
        "multitenancy": true
      }
    },
    "features": {
      "changelog": true
    },
    "profile": "with-mtx-sidecar"
  },
  "workspaces": [
    "app/*"
  ],
  "engines": {
    "node": "^20.0.0"
  },
  "sapux": [
    "app/project",
    "app/changelog",
    "app/products",
    "app/worklist",
    "app/project1"
  ]
}
